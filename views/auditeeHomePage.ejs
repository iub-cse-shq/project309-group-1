<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Audit Management Website | Auditor Home Page</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style.css" />
</head>

<body>
    <div class="header">

        <div class="container">
            <div class="navbar">
                <div class="logo">
                    <img class="logo" src="images/logo.png" alt="logo">
                </div>
                <nav>
                    <ul>
                        <li><a href="/auditeeHomePage">Home</a></li>
                        <li><a href="/">LogOut</a></li>
                        <!-- <li><a href="/submitcar">Submit CAR</a></li> -->

                        <!-- <li><a href="/products">Products</a></li> -->
                    </ul>
                </nav>
            </div>

        </div>

    </div>
    <div class="body">
        <h1 style="text-align: center; width: 100%;">NCs</h1>
        <table border="1" style="text-align: center; width: 100%;">
            <tr>
                <th>SL.</th>
                <th>Name of Audit</th>
                <th>Date of Audit</th>
                <th>Report Date</th>
                <th>Department</th>
                <th>Auditor Name</th>
                <th>Area</th>
                <th>Responsible Person</th>
                <th>NC Type</th>
                <th>Statement</th>
                <th>CAR</th>
            </tr>
            <% var Serial = 1 %>
                <% allNcs.forEach((nc)=>{ %>
                    <tr>
                        <td>
                            <%= Serial %>
                        </td>
                        <td id="ncname<%=Serial%>">
                            <%= nc.audit_name %>
                        </td>
                        <td id="ncauditdate<%=Serial%>">
                            <%= nc.audit_date %>
                        </td>
                        <td id="ncreportdate<%=Serial%>">
                            <%= nc.report_date %>
                        </td>
                        <td id="ncdepartment<%=Serial%>">
                            <%= nc.department %>
                        </td>
                        <td id="ncauditorname<%=Serial%>">
                            <%= nc.auditor_name %>
                        </td>
                        <td id="ncarea<%=Serial%>">
                            <%= nc.area %>
                        </td>
                        <td id="ncresperson<%=Serial%>">
                            <%= nc.res_person %>
                        </td>
                        <td id="nctype<%=Serial%>">
                            <%= nc.type %>
                        </td>
                        <td id="ncstatement<%=Serial%>">
                            <%= nc.statement %>
                        </td>
                        <td>
                            <Button id="carBtn<%=Serial%>" onclick="carButtonClicked(event)">CAR</Button>
                        </td>
                    </tr>
                    <% Serial++ %>
                        <% }) %>
        </table>
        <div id="carFormPart" style="display: none;">
            <h1 style="text-align: center; width: 100%;">CAR Form</h1>

            <div class="form">
                <fieldset>
                    <legend>CAR Form</legend>
                    <label>Audit Name</label><br>
                    <input readonly type="text" placeholder="Audit Name" id="car_name"><br>
                    <label>Date of Report</label><br>
                    <input readonly type="date" placeholder="Audit Date" id="car_report_date"><br>
                    <label>Department</label><br>
                    <input readonly type="text" placeholder="Audit Department" id="car_department"><br>
                    <label>Responsible Person</label><br>
                    <input readonly type="text" placeholder="Auditor Name" id="car_res_person"><br>
                    <label>Statement</label><br>
                    <textarea readonly id="car_statement" wrap="soft" rows="5" cols="68"></textarea><br>
                    <br>
                    <hr>
                    <hr>
                    <br><br>
                    <label>Root Cause Identification</label><br>
                    <input type="text" placeholder="Root Cause Identification" id="car_rootCause"><br>
                    <label>Proposed Action Plan</label><br>
                    <input type="text" placeholder="Proposed Action Plan" id="car_proposedPlan"><br>
                    <label>Due Date</label><br>
                    <input type="date" id="car_dueDate"> <br>


                    <button class="btn" id="car_button" onclick="carSubmitClicked()">SUBMIT CAR</button>


                </fieldset>

            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="script.js"></script>
</body>

</html>